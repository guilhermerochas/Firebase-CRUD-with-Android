<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MostraLivro.MostraLivroActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appbar_mostra_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/mostra_livro_menu"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/back_icon"
        />

    <TextView
        android:id="@+id/exibe_nome_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome: "
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/exibe_autor_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autor: "
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/exibe_descricao_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descricao: "
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:textSize="25sp"
        />

</LinearLayout>